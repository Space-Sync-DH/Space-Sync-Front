<div class="flex items-center justify-center w-full lg:w-1/2 min-h-screen">
    <div class="p-8 lg:p-24 md:p-16 w-full flex flex-col items-center justify-center bg-white text-black rounded-lg shadow-lg h-full">
        <h1 class="text-4xl font-bold mb-8 text-center">Inicio de Sesión</h1>
        <form action="#" method="POST" class="w-full">
            <div class="mb-6">
                <label for="username" class="block text-gray-600 text-lg">Usuario</label>
                <input type="text" id="username" name="username" class="w-full border border-gray-300 rounded-md py-3 px-4 focus:outline-none focus:border-blue-500" autocomplete="off">
            </div>
            <div class="mb-6">
                <label for="password" class="block text-gray-800 text-lg">Contraseña</label>
                <input type="password" id="password" name="password" class="w-full border border-gray-300 rounded-md py-3 px-4 focus:outline-none focus:border-blue-500" autocomplete="off">
            </div>
            <div class="mb-6 flex items-center">
                <input type="checkbox" id="remember" name="remember" class="text-red-500">
                <label for="remember" class="text-gray-800 ml-2 text-lg">Recuérdame</label>
            </div>

            <div class="flex flex-col sm:flex-row sm:justify-between sm:space-x-4">
                <button class="text-xl flex-1 h-12 rounded bg-emerald-500 text-white relative overflow-hidden group z-10 hover:text-white duration-1000 mb-4 sm:mb-0">
                    <span class="absolute inset-0 bg-emerald-600 group-hover:scale-150 scale-0 rounded-full group-hover:duration-500 duration-700 origin-center transform transition-all"></span>
                    <span class="absolute inset-0 bg-emerald-800 group-hover:scale-150 scale-0 rounded-full group-hover:duration-700 duration-500 origin-center transform transition-all"></span>
                    <span class="relative z-20">Login</span>
                </button>
                
                <button onclick="location.href='/login-admin'" class="text-xl flex-1 h-12 rounded bg-emerald-500 text-white relative overflow-hidden group z-10 hover:text-white duration-1000">
                    <span class="absolute inset-0 bg-emerald-600 group-hover:scale-150 scale-0 rounded-full group-hover:duration-500 duration-700 origin-center transform transition-all"></span>
                    <span class="absolute inset-0 bg-emerald-800 group-hover:scale-150 scale-0 rounded-full group-hover:duration-700 duration-500 origin-center transform transition-all"></span>
                    <span class="relative z-20">Empleados</span>
                </button>
            </div>
        </form>
    </div>
</div>
