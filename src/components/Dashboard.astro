---
// src/components/Dashboard.astro
---

<div>
  <h2 class="text-2xl font-semibold mb-4">Dashboard</h2>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-4">
    <div class="bg-white shadow rounded-lg p-4">
      <h3 class="text-lg font-bold">Reservas Hoy</h3>
      <canvas id="reservasHoyChart"></canvas>
    </div>
    <div class="bg-white shadow rounded-lg p-4">
      <h3 class="text-lg font-bold">Reservas Este Mes</h3>
      <canvas id="reservasMesChart"></canvas>
    </div>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-4">
    <div class="bg-white shadow rounded-lg p-4">
      <h3 class="text-lg font-bold">Reservas por Tipo de Espacio</h3>
      <canvas id="tipoEspacioChart"></canvas>
    </div>
    <div class="bg-white shadow rounded-lg p-4">
      <h3 class="text-lg font-bold">Comentarios</h3>
      <canvas id="ingresosChart"></canvas>
    </div>
  </div>
</div>

<script>
  // Aquí va el código de inicialización de los gráficos
  const ctxHoy = document.getElementById('reservasHoyChart').getContext('2d');
  const reservasHoyChart = new Chart(ctxHoy, {
    type: 'bar',
    data: {
      labels: ['Reservas'],
      datasets: [{
        label: 'Reservas Hoy',
        data: [12], // Cambia esto por datos reales
        backgroundColor: 'rgba(75, 192, 192, 0.6)',
      }]
    },
    options: {
      responsive: true,
    }
  });

  // Agrega los otros gráficos de manera similar...
</script>
