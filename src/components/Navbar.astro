<header class="bg-white/30 backdrop-blur-md shadow-md">
  <nav class="container mx-auto flex justify-between items-center p-5">
    <div class="flex items-center space-x-2">
      <a href="/" class="flex items-center">
        <img src="/logo.png" alt="Logo Space Sync" class="h-16" />
        <span class="text-4xl font-bold ml-3" style="font-family: 'Bebas Neue', sans-serif;
          background: linear-gradient(to right, #00275b, #3871c1);
          -webkit-background-clip: text;
          -webkit-text-fill-color: transparent;">
          Space Sync
        </span>
      </a>
    </div>
    
    <!-- Icono de menú móvil, visible solo en dispositivos móviles -->
    <button id="menu-toggle" class="block lg:hidden focus:outline-none">
      <svg class="w-6 h-6 text-white" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7" />
      </svg>
    </button>

    <!-- Menú de navegación -->
    <ul id="mobile-menu" class="hidden lg:flex space-x-9 items-center">
      <li><a href="/" class="text-white hover:text-blue-600 text-xl" style="font-family: 'Bebas Neue', sans-serif;">Inicio</a></li>
      <li><a href="/#servicios" class="text-white hover:text-blue-600 text-xl" style="font-family: 'Bebas Neue', sans-serif;">Servicios</a></li>
      <li><a href="/#contacto" class="text-white hover:text-blue-600 text-xl" style="font-family: 'Bebas Neue', sans-serif;">Contacto</a></li>
      <li>
        <a href="/login" class="text-white hover:text-blue-600 text-xl" style="font-family: 'Bebas Neue', sans-serif; border: 2px solid; padding: 8px 16px; border-radius: 9999px;">
          Inicio de Sesión
        </a>
      </li>
    </ul>
  </nav>

  <!-- Menú móvil desplegable -->
  <ul id="dropdown-menu" class="hidden flex-col space-y-4 p-4 lg:hidden bg-white text-black rounded-lg shadow-md">
    <li><a href="/" class="block text-lg hover:text-blue-600">Inicio</a></li>
    <li><a href="#servicios" class="block text-lg hover:text-blue-600">Servicios</a></li>
    <li><a href="#contacto" class="block text-lg hover:text-blue-600">Contacto</a></li>
    <li><a href="/login" class="block text-lg hover:text-blue-600">Inicio de Sesión</a></li>
  </ul>
</header>

