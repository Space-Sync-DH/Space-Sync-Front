---
// Componente Contacto.astro
---

<section id="contacto" class="py-12">
  <h2 class="text-4xl font-bold text-center mb-8">Contáctanos</h2>
  <div class="flex flex-col md:flex-row gap-8 justify-center">
    <!-- Formulario de contacto -->
    <form class="bg-white bg-opacity-10 backdrop-blur-lg w-full md:w-[700px] min-h-[480px] rounded-[20px] shadow-custom p-6 flex flex-col">
      <div class="mb-6">
        <label for="name" class="block text-lg font-bold mb-2">Nombre</label>
        <input type="text" id="name" class="w-full p-3 rounded-md text-black" placeholder="Tu nombre" />
      </div>
      <div class="mb-6">
        <label for="email" class="block text-lg font-bold mb-2">Correo electrónico</label>
        <input type="email" id="email" class="w-full p-3 rounded-md text-black" placeholder="Tu correo" />
      </div>
      <div class="mb-6">
        <label for="message" class="block text-lg font-bold mb-2">Mensaje</label>
        <textarea id="message" class="w-full p-3 rounded-md text-black" placeholder="Tu mensaje" rows="5"></textarea>
      </div>
      <button type="submit" class="bg-blue-600 text-white px-6 py-3 rounded-lg">Enviar</button>
    </form>
    
    <!-- Mapa de Google -->
    <div class="w-full md:w-[700px]">
      <div style="width: 100%">
        <iframe
          width="100%"
          height="600"
          src="https://maps.google.com/maps?width=100%25&amp;height=600&amp;hl=es&amp;q=DUOC%20UC%20San%20Joaqu%C3%ADn,%20college,%20San%20Joaqu%C3%ADn,%20Chile+(Oficina)&amp;t=&amp;z=17&amp;ie=UTF8&amp;iwloc=B&amp;output=embed">
        </iframe>
      </div>
    </div>  
  </div>
</section>
